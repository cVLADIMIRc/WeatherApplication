<Window x:Class="WeatherApplication.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApplication"
        mc:Ignorable="d"
        Title="StartWindow" 
        Height="450" 
        Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#D0B1FF" 
        Closing="Window_Closing"
        >
    <Grid>
        <Canvas>
            <Label FontSize="40" Canvas.Top="150" Canvas.Left="85" Content="HELLO"/>
            <Button Command="{Binding ViewMainWindowCommand}" Width="150"  Height="30" Canvas.Top="340" Canvas.Left="75" Content="Get Weather" Click="Button_Click"/>
        </Canvas>
    </Grid>
</Window>
